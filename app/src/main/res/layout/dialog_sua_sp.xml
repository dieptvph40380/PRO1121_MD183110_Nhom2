<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#EF1C1C"
        android:textSize="20sp"
        android:text="Sửa sản phẩm"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/btn_sanh_sp"
            android:layout_marginRight="40dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Chọn ảnh"/>
        <ImageView
            android:id="@+id/img_sua_sp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <EditText
        android:id="@+id/edt_Ten_SP"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:hint="Nhập tên sản phẩm"/>
    <EditText
        android:id="@+id/edt_Gia_SP"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:hint="Nhập giá"/>
    <Spinner
        android:id="@+id/spn_TenLoai"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#EF1C1C"
        android:textSize="20sp"
        android:text="Sửa chi tiết"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/edt_Klg_SP"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:hint="Nhập khối lượng"/>

    <EditText
        android:id="@+id/edt_LgCalo_SP"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:hint="Nhập lượng kalo"/>
    </LinearLayout>
    <EditText
        android:id="@+id/edt_TP_SP"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:hint="Nhập thành phần"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_Sua_SP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Sửa"/>
        <Button
            android:id="@+id/btn_Huy_SP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="Hủy"/>
    </LinearLayout>
</LinearLayout>