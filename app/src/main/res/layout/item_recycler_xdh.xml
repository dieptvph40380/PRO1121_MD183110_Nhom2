<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="10dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/TenSP_XDH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Tên SP"
            android:textColor="#8a97dd"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TenKH_XDH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ten KH"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#8a97dd"
            android:textSize="16dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/TenQL_XDH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ten QL"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#8a97dd"
            android:textSize="16dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/GiaoHang_XDH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Trạng thái giao hàng"
            android:textColor="#8a97dd"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Ngay_XDH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#8a97dd"
            android:textSize="16dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_HuyDH"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Hủy Đơn"/>
            <Button
                android:id="@+id/btn_XCTDH"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem chi tiết"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>