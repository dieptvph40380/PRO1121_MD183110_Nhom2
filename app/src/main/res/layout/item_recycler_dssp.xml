<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="10dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_DSSP"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_gravity="center" />
    <LinearLayout
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_Ten_DSSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Sản Phẩm"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textColor="#8a97dd"
            android:textSize="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_Gia_DSSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textColor="#8a97dd"
            android:textSize="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_Ten_Loai_DSSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Loại"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textColor="#8a97dd"
            android:textSize="20dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_xemct_DSSP"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Xem Chi Tiết"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/btn_themgh_DSSP"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Thêm Giỏ Hàng"/>

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>