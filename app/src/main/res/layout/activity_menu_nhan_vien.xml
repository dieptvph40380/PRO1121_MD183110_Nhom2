<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout_NV"
    android:layout_height="match_parent"
    tools:context=".Menu_NhanVien">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_NV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9C27B0" />

        <FrameLayout
            android:id="@+id/framelayout_NV"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView_NV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_layoutnhanvien"
        app:menu="@menu/drawer_navigation_nhanvien" />

</androidx.drawerlayout.widget.DrawerLayout>